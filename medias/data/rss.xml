---
layout:
permalink: /rss.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Sylvain Durand</title>
    <description>{{ site.t[page.lang].description }}</description>
    <link>http://sylvain.durand.tf</link>
    <atom:link href="http://sylvain.durand.tf/rss.xml" rel="self" type="application/rss+xml" />
    {% assign posts=site.posts | where:"lang", "en" | where:"type", posts %}
    {% for post in posts %}
      <item>
        <title>{{ post.title | strip_html }}</title>
        <description>{{ post.content | xml_escape | replace: "[[", " (" | replace: "]]", ")"}}</description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>http://sylvain.durand.tf{{ post.url }}</link>
        <guid isPermaLink="true">http://sylvain.durand.tf{{ post.url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
